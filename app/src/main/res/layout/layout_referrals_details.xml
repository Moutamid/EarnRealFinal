<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:elevation="4dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@id/remarks_text_view_layout_referral_details"
        android:layout_toLeftOf="@id/remarks_text_view_layout_referral_details"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_text_view_layout_referral_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="John williams"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/number_text_view_layout_referral_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="03123456789"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/city_text_view_layout_referral_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="New york"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/remarks_text_view_layout_referral_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="NA"
        android:textAllCaps="true"
        android:textColor="@color/orange"
        android:textSize="25sp" />

</RelativeLayout>